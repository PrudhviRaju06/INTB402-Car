@using PagedList.Mvc
@model  PagedList.IPagedList<CarAB.Models.tbl_category>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px; /* Adds some space between cards */
        }

        .card {
            width: calc(33.33% - 20px); /* Adjust the width as needed */
            border: 1px solid #ccc;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .card-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-content {
            padding: 20px;
        }

        h3 {
            margin-bottom: 10px;
            font-size: 18px;
            color: #333;
        }
    </style>
</head>
<body>

    <center>  <h2><i>Welcome to PrCar</i></h2> </center>
    <div class="card-container">
        <div class="card">
            <img src="~/Imges/endeavour.jpeg" alt="User Image 1" class="card-img">
            <div class="card-content">
                <h3>Ford Endeavour</h3>
            </div>
        </div>

        <div class="card">
            <img src="~/Imges/F.jpeg" alt="User Image 2" class="card-img">
            <div class="card-content">
                <h3>Toyota Fortuner</h3>
            </div>
        </div>

        <div class="card">
            <img src="~/Imges/Thar.jpeg" alt="User Image 2" class="card-img">
            <div class="card-content">
                <h3>Thar</h3>
            </div>
        </div>
        <div class="card">
            <img src="~/Imges/Magnite.jpeg" alt="User Image 2" class="card-img">
            <div class="card-content">
                <h3>Nissan</h3>
            </div>
        </div>
        <div class="card">
            <img src="~/Imges/seltos.jpeg" alt="User Image 2" class="card-img">
            <div class="card-content">
                <h3>Seltos</h3>
            </div>
        </div>
        <div class="card">
            <img src="~/Imges/scorpio.jpeg" alt="User Image 2" class="card-img">
            <div class="card-content">
                <h3>Scorpio</h3>
            </div>
        </div>

    </div>
</body>
</html>
